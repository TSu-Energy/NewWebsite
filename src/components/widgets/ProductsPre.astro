---
import React from 'react';
import NavigationModule from './NavigationModule';

import type { Features as Props } from '~/types';
import WidgetWrapper from '../ui/WidgetWrapper.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  columns = 3,
  defaultIcon,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const items = [
  // 这里的图片地址是public下的地址
  {
    title: '智能电池监控系统',
    imageUrl: '/images/products/module1.jpg',
    content: '一款集成了先进热失控预测模型的智能监控系统，能够实时监测电池状态，预测并警告潜在的热失控事件。',
  },
  {
    title: '安全增强型锂离子电池模块',
    imageUrl: '/images/products/7.png',
    content: '采用最新研究成果，设计了具有改进热稳定性和安全性的电池模块。',
  },
  {
    title: '电池热失控模拟软件',
    imageUrl: '/images/products/6.png',
    content: '一款专业的电池热失控模拟软件，适用于电池设计工程师和研究人员。',
  },
  // Add more items as needed
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <NavigationModule items={items} client:load />
</WidgetWrapper>
